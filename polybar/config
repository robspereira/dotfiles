[module/spotify1]
type = custom/script
exec = ~/.config/polybar/get_spotify_status.sh
interval = 1

format-foreground = #ff 0
format-background = #ff 0
format-padding = 2
format-underline = #ff 0
format-prefix = "ÔÜº "
format-prefix-foreground = #ff 0 
label = %output:0:150%

[module/spotify]
type = custom/script
tail = true
; prefix symbol is shown before the text
format-prefix = "ÔÜº "
format = <label>
exec = ~/.config/polybar/scroll_spotify_status.sh

[module/spotify-prev]
type = custom/script
exec = echo "‚è™"
format = <label>
click-left = playerctl previous -p spotify

[module/spotify-play-pause]
type = custom/ipc
hook-0 = echo "‚ñ∂"
hook-1 = echo "‚è∏"
initial = 1
click-left = playerctl play-pause -p spotify

[module/spotify-next]
type = custom/script
exec = echo "‚è©"
format = <label>
click-left = playerctl next -p spotify


